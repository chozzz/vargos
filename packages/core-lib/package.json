{
  "name": "@workspace/core-lib",
  "version": "0.1.0",
  "description": "Core business logic library for Vargos - functions, LLM, and vector services",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "private": true,
  "scripts": {
    "build": "tsc && npm run build:mjs",
    "build:mjs": "node scripts/build-mjs.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@qdrant/js-client-rest": "^1.15.1",
    "openai": "^5.16.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.2"
  }
}

