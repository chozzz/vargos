# Vargos Backend Configuration
# Memory backend: file | qdrant
VARGOS_MEMORY_BACKEND=file

# Sessions backend: file | postgres
VARGOS_SESSIONS_BACKEND=file

# File Backend Configuration
VARGOS_MEMORY_DIR=~/.vargos/memory
VARGOS_SESSIONS_DIR=~/.vargos/sessions

# Qdrant Configuration (when VARGOS_MEMORY_BACKEND=qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# PostgreSQL Configuration (when VARGOS_SESSIONS_BACKEND=postgres)
POSTGRES_URL=postgresql://user:password@localhost:5432/vargos

# OpenAI API Key (required for embeddings in MemoryContext)
OPENAI_API_KEY=

# Development Mode (enables file watcher for memory auto-reindex)
NODE_ENV=development
