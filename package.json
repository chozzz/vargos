{
  "name": "vargos",
  "version": "0.0.1",
  "description": "Vargos is a scalable orchestration platform that bridges Large Language Models (LLMs) to real-world system actions through modular function execution, OpenAPI endpoints, and Model Context Protocol (MCP) compatibility.",
  "keywords": [
    "orchestration",
    "ai-infrastructure",
    "openapi",
    "mcp",
    "llm-agent",
    "system-automation",
    "nestjs",
    "turborepo",
    "self-hosted"
  ],
  "author": "Vadi Taslim",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "turbo": "latest",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  }
}
